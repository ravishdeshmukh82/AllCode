@model Contact

@{
    ViewBag.Title = "Contact Details";

}

<div class="justify-content-center m-4">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.FirstName @Model.LastName</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top imageThumbnail" src="~/images/NoImage.jpg" asp-append-version="true" />
                    <h4>
                    <span><img src="~/images/email.png" height="30" width="30"  /></span>  @Model.Email
                    </h4>
                <h4><span><img src="~/images/phone.png" height="30" width="30"  /></span> @Model.PhoneNo
                </h4>
                <h4>Status:@Model.Status</h4>
            </div>
            <div class="card-footer text-center">
                <a class="btn btn-primary" asp-controller="home" asp-action="index">Back</a>
                <a asp-controller="home" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary m-1">Edit</a>
                <a asp-controller="home" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    </div>
</div>